<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="ru.pfr.client.controller.UserDialogController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <GridPane vgap="10" hgap="10">
        <Label text="Имя пользователя:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Пароль:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Роль:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Активен:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <CheckBox fx:id="activeCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Отмена" onAction="#handleCancel"/>
        <Button text="Сохранить" onAction="#handleSave" defaultButton="true"/>
    </HBox>
</VBox> 